

<main class="content">
  <div class="container-fluid p-0">
      <h1 class="h3 mb-3">customers</h1>

      <div class="row">
          <div class="col-12">
            <div class="card">
       
                <div class="card-body">
                  <div class="row" style="float: right">
                    <a href="#" class="btn btn-success m-3" style="width: fit-content">Export</a>
                  </div>
              
                  <table class="table mt-2" id="tableid">
                    <thead>
                      <tr>
                        <th scope="col">No</th>
              
                        <th scope="col">Name</th>
              
                        <th scope="col">Email</th>
              
                        <th scope="col">Phone</th>

                        <th scope="col">isActive</th>

                        <th scope="col">status</th>
              
                        <th scope="col">Options</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% userList.forEach((element,index)=> { %>
                      <tr>
                        <td>
                          <%= index+1 %>
                        </td>
                        <td>
                          <%= element.name %>
                        </td>
                        <td>
                          <%= element.email %>
                        </td>
                        <td>
                          <%= element.phone %>
                        </td>
                        <td>
                          <%= element.isActive %>
                        </td>
                        <td>
                          <%= element.status %>
                        </td>
                        <td>
                    
                           
                          <% if (element.isActive) { %>
                            <a class="btn btn-danger" href="/admin/block/<%=element._id%>">Block</a>
                          <% } else { %>
                            <a class="btn btn-primary" href="/admin/unBlock/<%=element._id%>">UnBlock</a>
                          <% } %>
              
                          
                     
              
                          <!-- <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal<%#=element._id%>">
                           Delete
                          </button> -->
              
                          <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal<%=element._id%>">
                            <div class="modal-dialog" role="document">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <div class="modal-title">
                                    You are about to remove a customer record.
                                  </div>
                                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                  <p>
                                    This will remove the customer record of
                                    <b class="fw-bold">
                                      <%= element.name %>
                                    </b><br />
                                    Are you sure?
                                  </p>
                                </div>
              
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                    Close
                                  </button>
                                  <form action="/admin/delete/<%=element._id%>?_method=DELETE" method="post" class="position-relative">
                                    <button type="submit" class="btn btn-primary">
                                      Yes, Remove customer
                                    </button>
                                  </form>
                                </div>
                              </div>
                            </div>
                          </div>
                        </td>
                      </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
            </div>
          </div>
      </div>
  </div>
</main>




<script>
  $(document).ready(function() {
    $("#tableid").DataTable();
  });
  
</script>