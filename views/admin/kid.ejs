


<section>
  
    <div class="container">
        <div class="row" style="float:right">
            <a href="#" class="btn btn-success m-3" style="width:fit-content">Add product</a>
       
        </div>
          
        <table class="table mt-2" id="tableid">
            <thead>
                 <tr>
                      <th scope="col">No</th>

                      <th scope="col">ProductTitle</th>

                      <th scope="col">ProductPrice</th>
          
                      <th scope="col">SalePrice</th>
          
                      <th scope="col">Category</th>
          
                      <th scope="col">Stock</th>
          
                      <th scope="col">Options</th>

                 </tr>
            </thead>
            <tbody>
                  <% products.forEach((element,index) => { %>
               <tr>
                  <td> <%= index+1 %></td>
                  <td><%= element.productName %></td>
                  <td><%= element.productPrice %></td>
                  <td><%= element.salePrice %></td>
                  <td><%= element.category %></td>
                  <td><%= element.stock %></td>
                  <td>
                    <a class="btn btn-primary" href="/admin/edit/<%=element._id%>">Edit</a>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton"
                      data-bs-target="#deleteModal<%=element._id%>">
                      Delete Product
                    </button>
                    <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal<%=element._id%>">
                      <div class="modal-dialog" role="document">
                        <div class="modal-content">
                          <div class="modal-header">
                            <div class="modal-title">
                              You are about to remove a product record.
                            </div>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                              aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            <p>
                              This will remove the Product record of
                              <b class="fw-bold">
                                <%= element.productName %>
                              </b><br />
                              Are you sure?
                            </p>
                          </div>

                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                              Close
                            </button>
                            <form action="/admin/edit/<%=element._id%>?_method=DELETE" method="post"
                              class="position-relative">
                              <button type="submit" class="btn btn-primary">
                                Yes, Remove Product
                              </button>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>
                  </td>
              </tr>
            <% }); %>
          
        
        
        </tbody>
      </table>
    </div>
</section>



<script>

    $(document).ready( function () {
    
    $('#tableid').DataTable();
    
     } );
    
</script>



