

<main class="content">
  <div class="container-fluid p-0">
      <h1 class="h3 mb-3">Orders</h1>

      <div class="row">
          <div class="col-12">
            <div class="card">
       
                <div class="card-body">
                   



            
              <div class="row" style="float: right">
                <a href="/admin/Product" class="btn btn-success m-3" style="width: fit-content">Add product</a>
              </div>

              <table class="table mt-2" id="tableid">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">ProductTitle</th>
                    <th scope="col">Category</th>
                    <th scope="col">ProductPrice</th>
                    <th scope="col">SalePrice</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Images</th>
                    <th scope="col">sdel_status</th>                    
                    <th scope="col">Options</th>
                  </tr>
                </thead>
                <tbody>
                  <% products.forEach((element,index)=> { %>
                    <tr>
                      <td>
                        <%= index+1 %>
                      </td>
                      <td>
                        <%= element.productName %>
                      </td>
                      <td>
                        <%= element.category.name %>
                      </td>
                      <td>
                        <%= element.productPrice %>
                      </td>
                      <td>
                        <%= element.salePrice %>
                      </td>
                      <td>
                        <%= element.gender %>
                      </td>
                      <td>
                        <%= element.stock %>
                      </td>
                      <td>
                        <img style="width: 50px; height: 50px" src="/product-images/<%=element.images[0]%>" alt="" />
                      </td>
                      <td>
                        <%= element.softdelete %>
                      </td>
                      <td>
                        <a class="btn btn-primary" href="/admin/edit/<%=element._id%>">Edit</a>
                        <% if (!element.softdelete) { %>
                          <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton"
                          data-bs-target="#deleteModal<%=element._id%>">
                          Delete
                        </button>
                         <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal<%=element._id%>">
                          <div class="modal-dialog" role="document">
                            <div class="modal-content">
                              <div class="modal-header">
                                <div class="modal-title">
                                  You are about to soft delete a product from user side.
                                </div>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                  aria-label="Close"></button>
                              </div>
                              <div class="modal-body">
                                <p>
                                  This will soft delete the Product record 
                                  <b class="fw-bold">
                                    <%= element.productName %>
                                  </b><br />
                                  Are you sure?
                                </p>
                              </div>

                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                  Close
                                </button>
                                <form action="/admin/edit/<%=element._id%>?_method=DELETE" method="post"
                                  class="position-relative">
                                  <button type="submit" class="btn btn-primary">
                                    Yes, soft delete
                                  </button>
                                </form>
                              </div>
                            </div>
                          </div>
                        </div>
                        <% } else { %>
                          <a class="btn btn-info" href="/admin/enable-product/<%=element._id%>">undo</a>
                        <% } %>
            
                        
                     
                    
                       
                      </td>
                    </tr>
                    <% }); %>
                </tbody>
              </table>
                </div>
            </div>
          </div>
      </div>
  </div>
</main>

           

         

<script>
  $(document).ready(function () {
    $("#tableid").DataTable();
  });
</script>