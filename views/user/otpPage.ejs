

<link rel="stylesheet" href="/user/css/otp/otp-design.css" type="text/css">
<div class="d-flex justify-content-center align-items-center container">
    <div class="card py-5 px-3">
        <h5 class="m-0">Mobile phone verification</h5>
        <span class="mobile-text">Enter the code we just send on your mobile phone <b class="text-danger">+91 <%= locals.phoneNumber %></b></span>
        <form id="verificationForm" method="POST" action="/otp">
            <div class="d-flex flex-row mt-5">
                <input type="number" name="number1" class="form-control" maxlength="1" autofocus="" oninput="moveToNext(this)" onkeydown="moveToPrevious(event, this)" id="input1">
                <input type="number" name="number2" class="form-control" maxlength="1" oninput="moveToNext(this)" onkeydown="moveToPrevious(event, this)" id="input2">
                <input type="number" name="number3" class="form-control" maxlength="1" oninput="moveToNext(this)" onkeydown="moveToPrevious(event, this)" id="input3">
                <input type="number" name="number4" class="form-control" maxlength="1" oninput="moveToNext(this)" onkeydown="moveToPrevious(event, this)" id="input4">
                <input type="number" name="number5" class="form-control" maxlength="1" oninput="moveToNext(this)" onkeydown="moveToPrevious(event, this)" id="input5">
                <input type="number" name="number6" class="form-control" maxlength="1" oninput="moveToNext(this)" onkeydown="moveToPrevious(event, this)" id="input6">
            </div>
        </form>
        <div class="text-center mt-3">
            <span class="d-block mobile-text text-danger"> <%= locals.message %></span>
        </div>
        <div class="text-center mt-3">
            <span class="d-block mobile-text">Don't receive the code?</span>
            <span class="font-weight-bold text-danger cursor">Resend</span>
        </div>
    </div>
</div>

<script>
function moveToNext(currentInput) {
    if (currentInput.value.length === currentInput.maxLength) {
        var inputs = document.querySelectorAll("input[type='number']");
        var allInputsHaveValues = true;
        for (var i = 0; i < inputs.length; i++) {
            if (!inputs[i].value) {
                allInputsHaveValues = false;
                break;
            }
        }
        if (allInputsHaveValues) {
            document.getElementById('verificationForm').submit();
        } else {
            for (var i = 0; i < inputs.length; i++) {
                if (inputs[i] === currentInput && inputs[i + 1]) {
                    inputs[i + 1].focus();
                    break;
                }
            }
        }
    }
}

function moveToPrevious(event, currentInput) {
    if (event.keyCode === 8 && !currentInput.value) {
        var inputs = document.querySelectorAll("input[type='number']");
        for (var i = 0; i < inputs.length; i++) {
            if (inputs[i] === currentInput && inputs[i - 1]) {
                inputs[i - 1].focus();
                break;
            }
        }
    }
}
</script>

