<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Invoice | My Ecommerce Website</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"> -->
</head>
<body>

  <div class="container mt-5 border border-2 bg-success-subtle" id="printableArea">
    <div class="row">
      <div class="col-md-6">
        <h4 class="font-weight-bold mb-3">Invoice #</h4>
        <% orders.forEach(element => { %>
            <address class="mb-5">
                <strong>Shipping Address:</strong><br>
                <%= element.deliveryDetails.name %><br>
                <%= element.deliveryDetails.mobile %> <br>
                <%= element.deliveryDetails.address %><br>
                <%= element.deliveryDetails.city %><br>
                <%= element.deliveryDetails.state %><br>
                <%= element.deliveryDetails.zip %>
              </address>
             
        <% }) %>
        
      </div>
      <div class="col-md-6 text-right">
        <!-- <img src="/images/cv6.png" class="img-fluid" style="max-width: 100%; height: auto; height: 55px; width:200px"  alt="Logo here" /> -->
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <table class="table">
          <thead>
            <tr>
              <th>productName</th>
              <th class="text-right">Quantity</th>
              <th class="text-right">Price</th>
              <th class="text-right">Total</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td  class="text-right"><%= product.item.productName %></td>
              <td class="text-right"><%= product.quantity %></td>
              <td class="text-right"><%= product.item.salePrice %></td>
              <td class="text-right"><%= product.item.salePrice*product.quantity %></td>
            </tr>
          </tbody>
          <tfoot>
            <tr>
              <td colspan="3" class="font-weight-bold text-right">Subtotal:</td>
              <td class="text-right"><%= product.currentPrice*product.quantity %></td>
            </tr>
            <tr>
              <td colspan="3" class="font-weight-bold text-right">Shipping:</td>
              <td class="text-right">Free</td>
            </tr>
            <tr>
              <td colspan="3" class="font-weight-bold text-right">Tax Amount:</td>
              <td class="text-right"><%= product.tax*product.quantity%></td>
            </tr>
            <tr>
              <td colspan="3" class="font-weight-bold text-right">Grand Total:</td>
              <td class="text-right"><%= product.tax*product.quantity + product.currentPrice*product.quantity %></td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
  

  <!-- Bootstrap JS -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/>

  